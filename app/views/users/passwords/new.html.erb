<div class="w-full h-full flex justify-center flex-col items-center">
<h2 class="text-2xl text-red-700">Esqueceu sua senha?</h2>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="flex justify-center flex-col p-10 bg-white w-[400px] rounded-lg">
      <%= f.error_notification %>
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label:false,
                    input_html: { autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class:"cursor-pointer bg-red-300 px-5 rounded mt-[10px]" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>